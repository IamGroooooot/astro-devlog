---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Astro', url: 'https://astro.build/' },
  { name: 'UnoCSS', url: 'https://uno.antfu.me/' },
  { name: 'RSS', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Sitemap',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'TypeScript', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='Home'
  pageTitle='그루트 DevLog | Home'
  description='Groot의 개발 블로그'
>
  <main class='bg-#fffdf7 p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Devlog of Groot</h2>
      <div class='col-span-4'>
        <Card color='#f7e9d7'>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Migration in progress
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              &rlarr; 블로그를 이전하는 중입니다.
            </p>
            <Button target={'_self'} href=`${import.meta.env.BASE_URL}blog/`>
              새로운 블로그 보기 &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card color='#f9f4e3'>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Built with
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card color='#f7e9d7'>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Tistory Blog?
          </h2>
          <p>
            이전 티스토리 블로그는 그대로 유지됩니다. <br />
            <Button target=
              class='sanchez'
              href='https://coding-groot.tistory.com/'
              title='Go to the old blog'
            >
              이전 블로그 &rarr;
            </Button>
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
