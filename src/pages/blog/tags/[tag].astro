---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/blog/BlogList.astro';
import { Button } from '@eliancodes/brutal-ui';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog').then((collection: any[]) =>
    collection.reverse()
  );

  const tags: string[] = [];

  allPosts.forEach((post: { data: { tags: any[]; }; }) => {
    post.data.tags.forEach((tag: string) => {
      tags.push(tag.toLowerCase());
    });
  });

  return Array.from(new Set(tags)).map((tag) => {
    return {
      params: { tag },
      props: {
        tag,
        blogposts: allPosts.filter((post: { data: { tags: any[]; }; }) =>
          post.data.tags.map((tag: string) => tag.toLowerCase()).includes(tag)
        ),
      },
    };
  });
}

interface Props {
  tag: string;
  blogposts: CollectionEntry<'blog'>[];
}

const { tag, blogposts } = Astro.props;
---

<Layout
  title={`Blog: ${tag}`}
  description={`Groot DevLog | All posts tagged with ${tag}`}
  pageTitle={`Groot DevLog | Blogposts tagged with ${tag}`}
>
  <main class='p-6 bg-F0E6CBFF grid gap-4'>
    <div>
      <Button href=`${import.meta.env.BASE_URL}blog/`>&larr; Back to blog</Button>
    </div>
    <BlogList posts={blogposts} />
  </main>
</Layout>
